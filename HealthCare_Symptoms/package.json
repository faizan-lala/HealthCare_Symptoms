{
  "name": "healthcare-symptoms-app",
  "version": "1.0.0",
  "description": "A comprehensive MERN stack application for symptom tracking and health insights",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "server:start": "cd server && npm start",
    "client:build": "cd client && npm run build",
    "server:test": "cd server && npm test",
    "test": "npm run server:test",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "npm run client:build",
    "heroku-postbuild": "npm run install:all && npm run build"
  },
  "keywords": [
    "healthcare",
    "symptoms",
    "tracking",
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "tailwindcss",
    "health-tech"
  ],
  "author": "HealthTracker Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/healthcare-symptoms.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/healthcare-symptoms/issues"
  },
  "homepage": "https://healthtracker-app.vercel.app",
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
